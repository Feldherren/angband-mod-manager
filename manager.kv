#:kivy 2.0.0
#:import Logger kivy.logger.Logger
#:import NoTransition kivy.uix.screenmanager.NoTransition
<ManagerWindow>:
    RelativeLayout:
        id: rel_layout
        GridLayout:
            pos: 0,self.parent.height-self.height
            size_hint: 1,None
            height: 25
            rows: 1
            Button:
                size_hint: (None,1)
                padding_x: 5
                size: self.texture_size
                text: "Mod List"
                on_press: root.ids.screens.current = 'mod_list'
            Button:
                size_hint: (None,1)
                padding_x: 5
                size: self.texture_size
                text: "Preferences"
                on_press: root.ids.screens.current = 'preferences'
        ScreenManager:
            id: screens
            transition: NoTransition()
            Screen:
                id: mod_list
                name: "mod_list"
                GridLayout:
                    cols: 1
                    Label:
                        text: "Mod list goes here"
                    Label:
                        text: "Selected mod details go here"
            Screen:
                id: preferences
                name: "preferences"
                BoxLayout:
                    Label:
                        text: "Settings go here"
