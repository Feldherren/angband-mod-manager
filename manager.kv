#:kivy 2.0.0
#:import Logger kivy.logger.Logger
<ManagerWindow>:
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"
        GridLayout:
            size_hint: 1,None
            height: 25
            rows: 1
            Button:
                size_hint: (None,1)
                padding_x: 5
                size: self.texture_size
                text: "Mods"
            Button:
                size_hint: (None,1)
                padding_x: 5
                size: self.texture_size
                text: "Preferences"

<PreferencesWindow>:
    GridLayout:
        Button:
            id: sel_angband
            size_hint_y: None
            height: 25
            padding_x: 5
            text: "Select Angband Folder"
        Button:
            id: export_gamedata
            size_hint_y: None
            height: 25
            padding_x: 5
            text: "Export Gamedata Folder"
